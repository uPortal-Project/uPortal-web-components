{
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/travis-cli": "^8.0.0",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@vue/eslint-config-prettier": "^5.0.0",
    "babel-eslint": "^10.0.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-vue": "^5.0.0-beta.3",
    "lerna": "^3.16.4",
    "lerna-webjar": "^1.1.1",
    "lint-staged": "^9.0.0",
    "npm-run-all": "^4.1.5",
    "prettier-stylelint": "^0.4.2",
    "remark-cli": "^7.0.0",
    "remark-preset-lint-recommended": "^3.0.1",
    "remark-validate-links": "^9.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3",
    "yorkie": "^2.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ci",
    "prebuild": "rm -rf \"**/node_modules\" && npm ci && lerna bootstrap --ci",
    "build": "lerna run build",
    "ci:commitlint": "commitlint-travis",
    "format": "npm-run-all -p format:*",
    "format:js": "eslint --ext .js,.vue --fix .",
    "format:ts": "tslint -c tslint.json --fix \"**/*.ts\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:html": "prettier --write \"**/*.html\"",
    "format:css": "prettier-stylelint --write \"**/*.css\"",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --ext vue .",
    "lint:ts": "tslint -c tslint.json \"**/*.ts\"",
    "lint:css": "stylelint \"**/*.{css,scss,vue}\"",
    "lint:md": "remark --frail \"*.md\" \"docs/**/*.md\" \"@uportal/*/*.md\"",
    "start": "lerna run start",
    "test": "npm-run-all test:* lint:*",
    "test:packages": "lerna run test",
    "publish-webjar": "lerna-webjar"
  },
  "workspaces": [
    "@uportal/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {
      "no-invalid-this": "off",
      "require-jsdoc": "off",
      "max-len": "off",
      "no-console": "warn",
      "vue/html-closing-bracket-newline": "warn"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "gitHooks": {
    "commit-msg": "commitlint -e",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --ext .js,.vue --fix",
      "git add"
    ],
    "*.ts": [
      "tslint -c tslint.json --fix",
      "git add"
    ],
    "*.css": [
      "prettier-stylelint --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write --parser scss",
      "stylelint",
      "git add"
    ],
    "*.{html,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "stylelint": {
    "processors": [
      "@mapbox/stylelint-processor-arbitrary-tags"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
      "no-empty-source": null,
      "no-descending-specificity": null
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "validate-links",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":rebaseStalePrs",
      ":preserveSemverRanges"
    ],
    "lockFileMaintenance": {
      "enabled": true
    }
  },
  "engines": {
    "node": "^10.0.0 || ^11.0.0",
    "npm": "^6.5.0"
  },
  "dependencies": {}
}
