{
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^13.0.0",
    "@commitlint/config-conventional": "^13.0.0",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.4.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.0.0",
    "lerna": "^4.0.0",
    "lerna-webjar": "^1.1.1",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "remark-cli": "^10.0.0",
    "remark-preset-lint-recommended": "^6.0.0",
    "remark-validate-links": "^11.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.1.2",
    "tslint": "^6.0.0",
    "typescript": "^4.0.0",
    "yorkie": "^2.0.0"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --ci",
    "prebuild": "rm -rf \"**/node_modules\" && npm ci && lerna bootstrap --ci",
    "build": "lerna run build",
    "format": "npm-run-all -p format:*",
    "format:js": "eslint --ext .js,.vue --fix .",
    "format:ts": "tslint -c tslint.json --fix \"**/*.ts\"",
    "format:md": "prettier --write \"**/*.md\"",
    "format:html": "prettier --write \"**/*.html\"",
    "format:css": "prettier --write \"**/*.scss\"",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --ext vue .",
    "lint:ts": "tslint -c tslint.json \"**/*.ts\"",
    "lint:css": "stylelint \"**/*.{css,scss,vue}\"",
    "lint:md": "remark --frail \"*.md\" \"docs/**/*.md\" \"@uportal/*/*.md\"",
    "start": "lerna run start",
    "test": "npm-run-all test:* lint:*",
    "test:packages": "lerna run test",
    "publish-webjar": "lerna-webjar"
  },
  "workspaces": [
    "@uportal/*"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "rules": {
      "no-invalid-this": "off",
      "require-jsdoc": "off",
      "max-len": "off",
      "no-console": "warn",
      "vue/html-closing-bracket-newline": "warn"
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "gitHooks": {
    "commit-msg": "commitlint -ev",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --ext .js,.vue --fix"
    ],
    "*.ts": [
      "tslint -c tslint.json --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{html,md,json,scss}": [
      "prettier --write"
    ]
  },
  "stylelint": {
    "processors": [
      "@mapbox/stylelint-processor-arbitrary-tags"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-prettier/recommended"
    ],
    "rules": {
      "no-empty-source": null,
      "no-descending-specificity": null,
      "selector-pseudo-element-no-unknown": [
        true,
        {
          "ignorePseudoElements": "v-deep"
        }
      ]
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "validate-links",
      [
        "remark-lint-list-item-indent",
        false
      ]
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":rebaseStalePrs",
      ":preserveSemverRanges"
    ],
    "lockFileMaintenance": {
      "enabled": true
    }
  },
  "engines": {
    "node": "^14.0.0",
    "npm": "^6.0.0"
  },
  "dependencies": {}
}
